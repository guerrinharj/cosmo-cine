generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Filme {
  id                   String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  nome                 String
  cliente              String? 
  diretor              String
  categoria            Categoria
  produtoraContratante String?
  agencia              String?
  creditos             String
  is_service           Boolean  @default(false)
  date                 DateTime?
  thumbnail            String
  video_url            String
  showable             Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt @default(now())
}

enum Categoria {
  Publicidade
  Clipe
  Conteudo
}

model User {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Contato {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  nome      String
  funcao    String?
  email     String
  createdAt DateTime @default(now())
}
